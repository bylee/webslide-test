html, body {
	height: 100%;
}
.clickable {
	cursor: pointer;
}
.curton {
	display: block;
	height: 100%;
	width: 100%;

	background-color: black;
	opacity:0.5;
}

.spin {
	position: fixed;
	top: 50%;
	left: 50%;
}

body {
}

#navigator.horizontal
{
	display: inline;
	position: absolute;
	top: 0px;
	left: 0px;
	right: 0px;
	height: 150px;
}

#navigator.vertical {
	float: left;
	height: 100%;
	width: 200px;
}
#navigator.horizontal .scroller-controls {
	top: 0px;
	left: 0px;
	width: 40px;
	height: 100%;

}

#navigator.horizontal .scroll-container {
	top: 0px;
	left: 40px;
	right: 0px;
	height: 100%;
}

#navigator.horizontal+#editor {
	display: block;
	position: absolute;
	top: 160px;
	bottom: 0px;
	right: 0px;
	left: 0px;
}

#navigator.horizontal .scroll-container {
	overflow-x: auto;
	overflow-y: hidden;
	scrollbar-base-color: #C0C0C0;
	scrollbar-base-color: #C0C0C0;
	scrollbar-3dlight-color: #C0C0C0;
	scrollbar-highlight-color: #C0C0C0;
	scrollbar-track-color: #EBEBEB;
	scrollbar-arrow-color: black;
	scrollbar-shadow-color: #C0C0C0;
	scrollbar-dark-shadow-color: #C0C0C0;
}

#navigator.horizontal .scroll-contents {
	white-space: nowrap;
}

#navigator.horizontal .scroll-contents a {
	display: inline-block;
	width: 182px;
	height: 107px;
}

.preview {
	position: relative;
}

.preview > * {
	top: 0px;
	bottom: 0px;
	left: 0px;
	right: 0px;
	display: inline;
	position: absolute;
}

.preview-thumbnail {
	width: 1920px;
	height: 1080px;
	zoom: 0.3;
	-moz-transform: scale(0.3);
	-moz-transform-origin: 0 0;
	-o-transform: scale(0.3);
	-o-transform-origin: 0 0;
	-webkit-transform: scale(0.3);
	-webkit-transform-origin: 0 0;
}

#editor {
	float: right;
	display: block;
	position: absolute;
	top: 0px;
	bottom: 0px;
	right: 0px;
	left: 230px;

}

.scroller-controls {
	display: block;
	width: 100%;
	height: 30px;
	padding: 10px 10px;
	font-size: 24px;
}

.scroll-container {
	display: inline;
	top: 40px;
	bottom: 0px;
	overflow-y: scroll;
	position: absolute;

	scrollbar-base-color: #C0C0C0;
	scrollbar-base-color: #C0C0C0;
	scrollbar-3dlight-color: #C0C0C0;
	scrollbar-highlight-color: #C0C0C0;
	scrollbar-track-color: #EBEBEB;
	scrollbar-arrow-color: black;
	scrollbar-shadow-color: #C0C0C0;
	scrollbar-dark-shadow-color: #C0C0C0;

}
::-webkit-scrollbar { width: 10px; height: 3px;}
::-webkit-scrollbar-button {  height: 0px; }
::-webkit-scrollbar-track {  background-color: #999;}
::-webkit-scrollbar-track-piece { background-color: #eee;}
::-webkit-scrollbar-thumb { height: 50px; background-color: #666; border-radius: 5px;}
::-webkit-scrollbar-corner { background-color: #999;}}
::-webkit-resizer { background-color: #666;}

.scroll-contents {
	width: 100%;
	color: white;
}

.scroll-contents a {
	display: block;
	height: 153px;
	width: 172px;
	text-align: center;
	text-height: 80px;
	box-shadow: inset 0px 0px 9px #888;
	margin: 20px;
	padding: 4px;
}
.scroll-contents .selected {
	box-shadow: inset 0px 0px 9px red;
}
.scroll-contents div {
	height: 100%;
	text-height: 100%;
	overflow: hidden;
}
